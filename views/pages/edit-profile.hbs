<h1>Edit Profile</h1>
<form action="/edit-profile" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="{{user.name}}" required /><br
  />

  <label for="location">Location:</label>
  <input
    type="text"
    id="location"
    name="location"
    value="{{user.location}}"
  /><br />
  {{#ifEquals user.type "employer"}}
    <label for="budget">Budget:</label>
    <input
      type="number"
      id="budget"
      name="budget"
      value="{{employer.budget}}"
      required
    /><br />
  {{else}}
    <label for="bio">Bio:</label>
    <textarea id="bio" name="bio" required>{{freelancer.bio}}</textarea><br />

    <label for="profile_picture">Profile picture link:</label>
    <input
      type="text"
      id="profile_picture"
      name="profile_picture"
      value="{{freelancer.profile_picture}}"
    /><br />

  {{/ifEquals}}
  <button type="submit">Update Profile</button>

  <h2>Add Your Pet</h2>
  <form action="/add-pet" method="post">
    <label for="pet_name"> Pet Name: </label>
    <input type="text" id="pet_name" name="pet_name" /><br />
    
    <label for="pet_type"> Pet Type: </label>
    <select id="pet_type" name="pet_type" />
      <option value="dog">Dog</option>
      <option value="cat">Cat</option>
      <option value="hamster">Hamster</option>
    </select><br />

    <label for="age">Pet Age:</label>
    <input type="number" id="age" min="0" max="50"/><br/>

    <label for="special_needs">Special Needs:</label>
    <textarea id="special_needs" name="special_needs"/><br/>

    <button type="submit">Add Pet</button>
  </form>

  <h2>Your Own Pets</h2>
  <div id="owned-pets">
    {{#each pets}}
      <div class="pet-cards">
        <h3>{{name}}</h3>
        <p>Pet Type: {{pet_type}}</p>
        <p>Pet Age: {{age}}</p>
        <p>Special Needs: {{special_needs}}</p>
      </div>
    {{/each}}
  </div>

</form>